<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- using Linear Layout To add
               multiple views inside it  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- res/layout/food_place_layout.xml -->


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/placeImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="250dp"
                        android:layout_marginRight="70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tajwestend" />

                    <TextView
                        android:id="@+id/placeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeImage"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/fruktur"
                        android:text="Taj Westend"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="34sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/place1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/placeName"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Where luxury meets tranquility, Taj West End is your oasis in the heart of the city"
                        android:textAlignment="textStart"
                        android:textColor="#121111"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/bookButton"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/place1"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="50dp"
                        android:text="Book Table"
                        android:visibility="visible"
                        android:onClick="onBookButtonClick" />

                    <ImageView
                        android:id="@+id/placeImage1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/bookButton"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/stegi" />

                    <TextView
                        android:id="@+id/placeName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeImage1"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/fruktur"
                        android:text="STEGI"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/place2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/placeName1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Where culture thrives and creativity blossoms, Stegi is your gateway to artistic excellence."
                        android:textAlignment="textStart"
                        android:textColor="#121111"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/bookButton1"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/place2"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="50dp"
                        android:text="Book Table"
                        android:visibility="visible"
                        android:onClick="onBookButtonClick"/>


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:fontFamily="casual"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="#9C27B0"
                        android:textSize="48sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_alignBottom="@id/textView7"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="-88dp"
                        android:fontFamily="cursive"
                        android:text="Food just not fills stomach but Hearts too"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="#AC1A1A"
                        android:textSize="34sp" />
                    <ImageView
                        android:id="@+id/placeImage2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="70dp"
                        android:scaleType="centerCrop"
                        android:layout_below="@id/bookButton1"
                        android:src="@drawable/ctr" />

                    <TextView
                        android:id="@+id/placeName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeImage2"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/fruktur"
                        android:text="CTR"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/place3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/placeName2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="From crispy dosas to flavorful chutneys, CTR serves up a symphony of South Indian flavors that will tantalize your taste buds"
                        android:textAlignment="textStart"
                        android:textColor="#222121"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/bookButton2"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/place3"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="50dp"
                        android:text="Book Table"
                        android:visibility="visible"
                        android:onClick="onBookButtonClick"/>
                    <ImageView
                        android:id="@+id/placeImage3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="70dp"
                        android:scaleType="centerCrop"
                        android:layout_below="@id/bookButton2"
                        android:src="@drawable/kailash" />

                    <TextView
                        android:id="@+id/placeName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeImage3"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/fruktur"
                        android:text="Kailash Parbat"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/place4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/placeName3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Embark on a culinary journey through the flavors of India at Kailash Parbat, where every dish is a masterpiece"
                        android:textAlignment="textStart"
                        android:textColor="#121111"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/bookButton3"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/place4"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="50dp"
                        android:text="Book Table"
                        android:visibility="visible"
                        android:onClick="onBookButtonClick"/>
                    <ImageView
                        android:id="@+id/placeImage4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="70dp"
                        android:scaleType="centerCrop"
                        android:layout_below="@id/bookButton3"
                        android:src="@drawable/sheraton" />

                    <TextView
                        android:id="@+id/placeName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeImage4"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/fruktur"
                        android:text="Sheraton"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/place5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/placeName4"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Elegance redefined, Sheraton offers unparalleled hospitality for an unforgettable stay"
                        android:textAlignment="textStart"
                        android:textColor="#121111"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/bookButton4"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/place5"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="50dp"
                        android:text="Book Table"
                        android:visibility="visible"
                        android:onClick="onBookButtonClick"/>
                    <ImageView
                        android:id="@+id/placeImage5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="70dp"
                        android:scaleType="centerCrop"
                        android:layout_below="@id/bookButton4"
                        android:src="@drawable/vidyarti" />

                    <TextView
                        android:id="@+id/placeName5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeImage5"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/fruktur"
                        android:text="Vidyarti Bhavan"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/place6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/placeName5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Savor the taste of tradition at Vidyarthi Bhavan, where every bite tells a story of authentic South Indian cuisine"
                        android:textAlignment="textStart"
                        android:textColor="#222121"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#222121" />

                    <Button
                        android:id="@+id/bookButton5"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/place6"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="50dp"
                        android:text="Book Table"
                        android:visibility="visible"
                        android:onClick="onBookButtonClick"/>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/tool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#2D4946"
                        android:fontFamily="casual"
                        android:textAlignment="viewStart"
                        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
                        app:title="Treat ME UP"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
                        app:titleTextColor="#EAE0E0"
                        tools:ignore="MissingConstraints">

                    </androidx.appcompat.widget.Toolbar>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

  </androidx.constraintlayout.widget.ConstraintLayout>