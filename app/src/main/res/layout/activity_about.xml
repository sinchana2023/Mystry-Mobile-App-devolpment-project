<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plant"
    android:orientation="vertical"
    tools:context=".About">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:srcCompat="@drawable/splash" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="318dp"
        android:layout_height="442dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:text="Your ultimate adventure buddy, decoding local secrets for budget-savvy explorers. Unleash the thrill of discovering quirky hideouts, mouthwatering eats, and Instagrammable spots. With this App, turn every trip into a playful quest, making memories that come with a budget-friendly price tag. Get ready for spontaneous fun and surprises around every corner!"
        android:textColor="#802D8E"
        android:textSize="20sp" />

</LinearLayout>